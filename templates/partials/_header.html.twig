<header>
    <div class="header-area ">
        <div class="main-header header-sticky">
            <div class="container-fluid">
                <div class="menu-wrapper d-flex align-items-center justify-content-between">
                    <div class="header-left d-flex align-items-center">
                        <div class="logo">
                            <a href="{{ path('shionhouse_index') }}">
                                <img src="{{ asset('assets/img/logo/logo.png') }}" alt="L'Arbre à Lunette - Opticien Paris 12" class="logo-img">
                            </a>
                        </div>
                        <div class="main-menu  d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
                                    <li><a href="{{ path('shionhouse_index') }}">Home</a></li>
                                    <li><a href="{{ path('products_index') }}">Produits</a></li>
                                    <li><a href="{{ path('about') }}">À propos</a></li>
                                    <li><a href="{{ path('contact') }}">Contact</a></li>
                                    {% if app.user %}
                                    <li><a href="{{ path('profile_index') }}">Profil</a>
                                        <ul class="submenu">
                                            <li><a href="{{ path('profile_orders') }}">Mes commandes</a></li>
                                            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                                        </ul>
                                    </li>
                                    {% else %}
                                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="header-right1 d-flex align-items-center">
                        <div class="header-social d-none d-md-block">
                            {% if site_settings().facebookUrl %}
                                <a href="{{ site_settings().facebookUrl }}" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            {% endif %}
                            {% if site_settings().twitterUrl %}
                                <a href="{{ site_settings().twitterUrl }}" target="_blank"><i class="fab fa-twitter"></i></a>
                            {% endif %}
                            {% if site_settings().instagramUrl %}
                                <a href="{{ site_settings().instagramUrl }}" target="_blank"><i class="fab fa-instagram"></i></a>
                            {% endif %}
                            {% if site_settings().youtubeUrl %}
                                <a href="{{ site_settings().youtubeUrl }}" target="_blank"><i class="fab fa-youtube"></i></a>
                            {% endif %}
                            {% if site_settings().tiktokUrl %}
                                <a href="{{ site_settings().tiktokUrl }}" target="_blank"><i class="fab fa-tiktok"></i></a>
                            {% endif %}
                            {% if site_settings().pinterestUrl %}
                                <a href="{{ site_settings().pinterestUrl }}" target="_blank"><i class="fab fa-pinterest-p"></i></a>
                            {% endif %}
                        </div>
                        <div class="search d-none d-md-block">
                            <ul class="d-flex align-items-center">
                                <li class="mr-15">
                                    <div class="dropdown">
                                        <a href="#" class="nav-user-icon dropdown-toggle" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #000; font-size: 20px;">
                                            <i class="ti-user"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                            {% if app.user %}
                                                <a class="dropdown-item" href="{{ path('profile_index') }}">Mon profil</a>
                                                <a class="dropdown-item" href="{{ path('profile_orders') }}">Mes commandes</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                                            {% else %}
                                                <a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a>
                                                <a class="dropdown-item" href="{{ path('app_register') }}">Inscription</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a href="{{ path('cart_index') }}">
                                        <div class="card-stor">
                                            <img src="{{ asset('assets/img/gallery/card.svg') }}" alt="">
                                            {% set totalQuantity = 0 %}
                                            {% for item in app.session.get('panier', []) %}
                                                {% set totalQuantity = totalQuantity + item %}
                                            {% endfor %}
                                            <span>{{ totalQuantity }}</span>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
