    <style>
        /* Styles pour les avis Google - Cohérent avec style.css */
        .google-reviews-live {
            font-family: 'Poppins', sans-serif;
        }
        
        .google-reviews-live .section-tittle h2 {
            font-family: 'Cinzel', serif;
            color: #140C40;
        }
        
        /* Cartes avis */
        .review-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            height: 100%;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        
        .review-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(159, 120, 255, 0.25);
            border-color: #9F78FF;
        }
        
        .review-card .stars {
            color: #ffc107;
            font-size: 20px;
            margin-bottom: 15px;
            letter-spacing: 3px;
        }
        
        .review-card .review-text {
            color: #646D77;
            font-size: 14px;
            line-height: 1.7;
            font-style: italic;
            margin-bottom: 20px;
            min-height: 85px;
            font-family: 'Poppins', sans-serif;
        }
        
        .review-card .author-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .review-card .author-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: linear-gradient(135deg, #9F78FF 0%, #8a5fff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 20px;
            font-family: 'Cinzel', serif;
            box-shadow: 0 4px 12px rgba(159, 120, 255, 0.3);
        }
        
        .review-card .author-name {
            font-weight: 600;
            color: #1D2547;
            font-size: 15px;
            font-family: 'Poppins', sans-serif;
        }
        
        .review-card .review-date {
            font-size: 12px;
            color: #999;
            font-family: 'Poppins', sans-serif;
        }
        
        /* Bouton hover effect */
        .google-reviews-live .boxed-btn:hover {
            background: #3367d6 !important;
            border-color: #3367d6 !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(66, 133, 244, 0.4);
        }
        
        /* Animation d'entrée des cartes */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        #static-reviews-grid .col-lg-4 {
            animation: fadeInUp 0.6s ease forwards;
        }
        
        #static-reviews-grid .col-lg-4:nth-child(1) { animation-delay: 0.1s; }
        #static-reviews-grid .col-lg-4:nth-child(2) { animation-delay: 0.2s; }
        #static-reviews-grid .col-lg-4:nth-child(3) { animation-delay: 0.3s; }
        #static-reviews-grid .col-lg-4:nth-child(4) { animation-delay: 0.4s; }
        #static-reviews-grid .col-lg-4:nth-child(5) { animation-delay: 0.5s; }
        #static-reviews-grid .col-lg-4:nth-child(6) { animation-delay: 0.6s; }
        
        /* Widget EmbedSocial */
        .embedsocial-reviews {
            min-height: 400px;
        }
        
        /* Carousel contrôles */
        .carousel-control-prev,
        .carousel-control-next {
            width: 60px;
            opacity: 1;
        }
        
        .carousel-control-prev:hover span,
        .carousel-control-next:hover span {
            background: #8a5fff !important;
            transform: scale(1.1);
            transition: all 0.3s ease;
        }
        
        .carousel-indicators li {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .carousel-indicators li.active {
            width: 30px !important;
            border-radius: 6px !important;
        }
        
        /* Responsive - Desktop: 3 avis, Tablette: 2 avis, Mobile: 1 avis */
        @media (max-width: 991px) {
            .review-slide-item:nth-child(3) {
                display: none;
            }
        }
        
        @media (max-width: 767px) {
            .google-reviews-live .section-tittle h2 {
                font-size: 28px;
            }
            .google-reviews-live .boxed-btn {
                padding: 15px 30px;
                font-size: 12px;
            }
            
            /* Afficher 1 seul avis sur mobile */
            .review-slide-item:nth-child(2),
            .review-slide-item:nth-child(3) {
                display: none !important;
            }
            
            .review-slide-item {
                max-width: 100% !important;
                flex: 0 0 100% !important;
                padding-left: 15px;
                padding-right: 15px;
            }
            
            .review-card {
                padding: 30px 20px;
                margin-bottom: 20px;
                max-width: 500px;
                margin-left: auto;
                margin-right: auto;
            }
            .review-card .review-text {
                min-height: 70px;
                font-size: 14px;
            }
            
            /* Contrôles carousel mobile */
            .carousel-control-prev,
            .carousel-control-next {
                width: 45px;
            }
            
            .carousel-control-prev span,
            .carousel-control-next span {
                width: 40px !important;
                height: 40px !important;
            }
            
            .carousel-indicators {
                bottom: -40px !important;
            }
        }
    </style>
    
