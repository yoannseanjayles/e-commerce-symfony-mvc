<div class="row">
    <div class="col-lg-12 text-center">
        <div class="related__title">
            <h5>PRODUITS SIMILAIRES</h5>
        </div>
    </div>
    
    {% if relatedProducts is defined and relatedProducts|length > 0 %}
        {% for relatedProduct in relatedProducts %}
        {% set variantsAll = relatedProduct.variants|default([]) %}
        {% set variants = [] %}
        {% for v in variantsAll %}
            {% if v.name is defined and v.name == 'Variante par défaut' %}
            {% else %}
                {% set variants = variants|merge([v]) %}
            {% endif %}
        {% endfor %}
        {% if variants is empty and variantsAll|length > 0 %}
            {% set variants = variantsAll %}
        {% endif %}
        {% set minVariantPrice = null %}
        {% set hasVariantStock = false %}
        {% for v in variants %}
            {% if v.price is not null %}
                {% if minVariantPrice is null or v.price < minVariantPrice %}
                    {% set minVariantPrice = v.price %}
                {% endif %}
            {% endif %}
            {% if v.stock is not null and v.stock > 0 %}
                {% set hasVariantStock = true %}
            {% endif %}
        {% endfor %}
        {% set defaultVariant = variants|length > 0 ? (variants|first) : (variantsAll|length > 0 ? (variantsAll|first) : null) %}
        {% set effectivePrice = minVariantPrice is not null ? minVariantPrice : ((defaultVariant and defaultVariant.price is not null) ? defaultVariant.price : 0) %}
        {% set isAvailable = hasVariantStock %}
        {% set detailsHref = path('products_details', {slug: relatedProduct.slug}) %}
        {% set defaultVariantId = defaultVariant ? defaultVariant.id : 0 %}
        {% if defaultVariantId %}
            {% set detailsHref = detailsHref ~ '?variant=' ~ defaultVariantId %}
        {% endif %}

        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="{{ asset('assets/img/gallery/arrival1.png') }}" style="background-image: url('{{ asset('assets/img/gallery/arrival1.png') }}');">
                    {% if not isAvailable %}
                    <div class="label stockout">Rupture de stock</div>
                    {% endif %}
                    <ul class="product__hover">
                        <li><a href="{{ detailsHref }}"><span class="arrow_expand"></span></a></li>
                        <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                        <li>
                            <form method="post" action="{{ path('cart_add', {id: relatedProduct.id}) }}" style="display:inline; margin:0;">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('cart_add_' ~ relatedProduct.id) }}">
                                {% if defaultVariantId %}
                                    <input type="hidden" name="variant" value="{{ defaultVariantId }}">
                                {% endif %}
                                <button type="submit" style="border:0; background:none; padding:0;">
                                    <span class="icon_bag_alt"></span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="{{ detailsHref }}">{{ relatedProduct.name }}</a></h6>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                    </div>
                    <div class="product__price">{{ (effectivePrice / 100)|round(2, 'floor') }} €</div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% else %}
        {% for i in 1..4 %}
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="{{ asset('assets/img/gallery/arrival1.png') }}" style="background-image: url('{{ asset('assets/img/gallery/arrival1.png') }}');">
                    <ul class="product__hover">
                        <li><a href="{{ path('products_index') }}"><span class="arrow_expand"></span></a></li>
                        <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                        <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="{{ path('products_index') }}">Produit {{ i }}</a></h6>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <div class="product__price">59.00 €</div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% endif %}
</div>
